<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ScrumWebShop</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body style="overflow-x: hidden;">
    <header>
        <nav class="navbar navbar-expand-sm navbar-light" style="background-color: #e0e0e0">

            <div class="container">

                <div class="logo">
                    <a stype="color: black;" asp-controller="Home" asp-action="Index" class="company-name"><img class="logoimg" src=@Url.Content("~/images/brandlogo.png") alt="Sample Photo" />Solglasögon-Shoppen</a>
                </div>
                <div>
                    <a style="color: black; margin-right: 100px;" asp-area="" asp-controller="Home" asp-action="AboutUs">Om oss</a>
                    <a style="color: black;" asp-area="" asp-controller="Contacts" asp-action="Index">Kontakta oss</a>
                </div>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#basicExampleNav"
                        aria-controls="basicExampleNav" aria-expanded="false" aria-label="Toggle navigation">

                    <span class="navbar-toggler-icon"></span>
                </button>

            </div>

            <div class="nvabar">
                <partial name="_LoginPartial.cshtml" />
            </div>

            <div class="collapse nav-mobile" id="basicExampleNav">

                <div class="navbar-nav mr-auto text-uppercase nav-mobile">

                    <div class="nav-item">
                        <a class="nav-link font-weight-bold " style="color: black;" asp-area="" asp-controller="Products" asp-action="Index">Solglasögon</a>
                    </div>

                </div>
            </div>
        </nav>
        <div class="navbar navbar-expand-sm nav-tablet" style="border-bottom: gray solid 0.3px">
            <div class="container " style="width: 400px; margin: auto;">
                <div class="navbar-nav mr-auto text-uppercase" style="display: flex; justify-content: space-between;  width: 100%; ">

                    <div class="nav-item">
                        <a class="nav-link font-weight-bold " style="color: black;" asp-area="" asp-controller="Products" asp-action="Index">Solglasögon</a>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container pb-5">
        <main role="main">

            @RenderBody()

        </main>
    </div>
    <div id="page-conatinerfooter">
        <div id="content-wrapfooter">
            <footer class="page-footer font-small">
                <!-- tog bort : style="background-color: #e0e0e0" i slutet på ovanstående-->
                <div class="d-flex container justify-content-lg-around mt-3">
                    <div class="">
                        <a asp-controller="Home" asp-action="AboutUs" class="company-name">About us</a>
                    </div>
                    <div class="">
                        <a asp-controller="Contacts" asp-action="Index" class="company-name">Kontakt</a>
                    </div>
                    <div class="">
                        <!-- Facebook -->
                        <a class="fb-ic">
                            <i class="fab fa-facebook-f white-text mr-4"> </i>
                        </a>
                        <!-- Twitter -->
                        <a class="tw-ic">
                            <i class="fab fa-twitter white-text mr-4"> </i>
                        </a>
                        <!--Linkedin -->
                        <a class="li-ic">
                            <i class="fab fa-linkedin-in white-text mr-4"> </i>
                        </a>
                        <!--Instagram-->
                        <a class="ins-ic">
                            <i class="fab fa-instagram white-text"> </i>
                        </a>

                    </div>
                </div>
                <!-- Copyright -->
                <div class="footer-copyright text-center py-3">
                    &copy; 2020 - <a asp-controller="Home" asp-action="Index" class="company-name">Solglasögon-Shoppen</a>
                    <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
                <!-- Copyright -->
            </footer>
            </div>
        </div>


            <script src="~/lib/jquery/dist/jquery.min.js"></script>
            <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
            <script src="~/js/site.js" asp-append-version="true"></script>
            @RenderSection("Scripts", required: false)
</body>
</html>
