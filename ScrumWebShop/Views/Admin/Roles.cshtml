@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Roles";
}

<h1>Roles </h1>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>RoleId</th>
                <th>Role Name</th>
                <th></th>
            </tr>
        </thead>

        <tbody>

            @foreach (var role in Model)
            {   
            <tr>
                <td class="text-muted"> @role.Id</td>
                <td>@role.Name </td>
            </tr>
            }

        </tbody>
    </table>
}
else
{
<p>There is no roles. :-( </p>
}
    


